{% extends '@App/base.html.twig' %}

{% block container %}
    <div class="row">
        <div class="col-md-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h2 class="card-title">{{- member.name -}}</h2>
                    <p>
                        Komt voornamelijk bij locatie
                        <strong>
                            <a href="{{ path('app_location_view', { location: member.primaryLocation.id}) }}">
                                {{ member.primaryLocation.name }}
                            </a>
                        </strong>
                        en heeft in totaal <strong>{{ member.bookLoans | length }}</strong> uitleningen.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h2 class="card-title">Uitleningen</h2>
                    <ul class="list-group">
                        {% for bookLoan in member.bookLoans %}
                            <li class="list-group-item">
                                <a href="{{ path('app_bookLoan_view', { bookLoan: bookLoan.id }) }}">{{- bookLoan.bookExemplar.book.title -}}</a>
                            </li>
                        {% else %}
                            <li class="text-muted list-group-item">Geen</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}