{% extends '@App/base.html.twig' %}

{% block container %}
    <div class="row">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h3 class="card-title">Uitleningen</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Exemplaar</th>
                                <th>Boek</th>
                                <th>Lid</th>
                                <th>Startdatum</th>
                                <th>Terugbrengdatum</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for bookLoan in bookLoans %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_bookLoan_view', { bookLoan: bookLoan.id }) }}">#{{- bookLoan.bookExemplar.exemplarNumber -}}</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_book_view', { book: bookLoan.bookExemplar.book.id }) }}">{{- bookLoan.bookExemplar.book.title -}}</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_member_view', { member: bookLoan.member.id }) }}">{{- bookLoan.member.name -}}</a>
                                    </td>
                                    <td>
                                        {{- bookLoan.startDate | date('d-m-Y') -}}
                                    </td>
                                    <td>
                                        {{- bookLoan.dueDate | date('d-m-Y') -}}
                                    </td>
                                    <td>
                                        <button class="btn btn-primary">Aanpassen</button>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger">Verwijderen</button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">
                                        Geen boeken gevonden
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}