{% extends '@App/base.html.twig' %}

{% block container %}
    <div class="row">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h3 class="card-title">Medewerkers</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Naam</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for employee in employees %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_employee_view', { employee: employee.id }) }}">{{- employee.fullName -}}</a>
                                    </td>
                                    <td>
                                        <button class="btn btn-primary">Aanpassen</button>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger">Verwijderen</button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">
                                        Geen
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}