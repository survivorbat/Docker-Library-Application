{% extends '@App/base.html.twig' %}

{% block container %}
    <div class="row">
        <div class="col-md-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h2 class="card-title">Boek toevoegen</h2>
                    {{ form_start(form) }}
                        <div class="form-group">{{ form_row(form.title) }}</div>
                        <div class="form-group">{{ form_row(form.description) }}</div>
                        <div class="form-group">{{ form_row(form.author) }}</div>
                        <div class="form-group">{{ form_row(form.genres) }}</div>
                        <button type="submit" class="btn btn-primary">Opslaan</button>
                        {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}